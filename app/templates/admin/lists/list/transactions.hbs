<div class="row">
  <div class="col s12">
    <ul class="collection with-header">
      <h4 class="collection-header">
        {{model.place}}, {{moment-format model.when "LL"}}
      </h4>
      <div class="row">
        {{md-input type="number" min=0 step=1 value=numOfItems label='Item amount' class="col s6"}}
        <div class="col s6">
          {{md-btn text='Add'
                   action='addItems'
                   class='teal'}}
        </div>
      </div>
      {{#liquid-bind model.items as |items|}}
        {{#each model.items as |item|}}
        <li class="collection-item">
          {{item.name}} - {{item.price}}, {{item.quantity}}
        </li>
        {{/each}}
      {{/liquid-bind}}
    </ul>
  </div>
</div>
